import java.util.Scanner;

//Salena Bower
//2.5.19
//Chapter 2 Programming Challenge 9: Miles-per-Gallon

public class SBMilesPerGallon
{
   public static void main(String[] args)
   {
      float Miles;
      float Gallons;
      float MPG;
      
      //Gets input for Miles and Gallons variables
      Scanner keyboard = new Scanner(System.in);
      System.out.print("Enter the number of miles driven: ");
      Miles = keyboard.nextFloat();
      
      Scanner keyboard2 = new Scanner(System.in);
      System.out.print("Enter the number of gallons used: ");
      Gallons = keyboard2.nextFloat();
      
      //Calculates MPG
      MPG = (Miles / Gallons);
      
      //Prints MPG back the the user
      System.out.printf("Your vehicle's MPG is: %.2f", MPG);
      System.out.println(" MPG.");
   }
}
